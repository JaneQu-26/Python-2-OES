### Your code goes here
import tkinter as tk 
import random as rm
def password():
    num = int(input("How many passwords do you need? "))
    length = int(input("How long do you want it to be(6-12)? "))

    #makes a full list of letters and symbals
    letter = []
    for i in range(65, 126):
        letter.append(chr(i))

    for i in range(num):
        password = []
        for i in range(length):
            l = rm.randint(65, 126)
            password.append(chr(l))
        final = "".join(password)
        print(final)

root=tk.Tk()
root.geometry("600x400")
num_entry =tk.IntVar()
length_entry =tk.IntVar()

# defining a function that will
# get the name and password and 
# print them on the screen
def submit():
    num=int(num_entry.get())
    length=int(length_entry.get())

    letter = []
    for i in range(65, 126):
        letter.append(chr(i))

    for i in range(num):
        password = []
        for i in range(length):
            l = rm.randint(65, 126)
            password.append(chr(l))
        final = "".join(password)
        with open("password.txt", "r") as file:
            file.write(final)


num_ask = tk.Label(root, text = 'How many passwords do you need?', font=('calibre',10, 'bold'))
num_entry = tk.Entry(root,textvariable = num_entry, font=('calibre',10,'normal'))
len_ask = tk.Label(root, text = 'How long do you want it to be(6-12)?', font = ('calibre',10,'bold'))
len_entry=tk.Entry(root, textvariable = length_entry, font = ('calibre',10,'normal'))

# creating a button using the widget 
# Button that will call the submit function 
sub_btn=tk.Button(root,text = 'Enter', command = submit)
 
# placing the label and entry in
# the required position using grid
# method
num_ask.grid(row=0,column=0)
num_entry.grid(row=0,column=1)
len_ask.grid(row=1,column=0)
len_entry.grid(row=1,column=1)
sub_btn.grid(row=2,column=1)
 
# performing an infinite loop 
# for the window to display
root.mainloop()
