import random as rm
while True:
    try:
        num = int(input("How many passwords do you need? "))
        length = int(input("How long do you want it to be(6-12)? "))
        print(
            "what kinds of characters do you want:\n 1.lowercase letters  2.uppercase letters  3.numbers  4.symbols\npress enter for every one selection you make\ntype 'end' to finish selection"
        )

        find = []
        flag = True
        while flag:
            choice = input("enter: ")
            if choice != "end":
                find.append(choice)
            else:
                flag = False
    except:
        print("Error in entered value")
        continue

#makes a full list of letters and symbals
def all_chr():
    letter = []
    for i in range(48, 127):
        letter.append(chr(i))
    return letter


def only_lo_letters():
    letter = []
    for i in range(97, 123):
        letter.append(chr(i))
    return letter


def only_up_letters():
    letter = []
    for i in range(65, 91):
        letter.append(chr(i))
    return letter


def only_numbers():
    letter = []
    for i in range(48, 58):
        letter.append(chr(i))
    return letter


def only_symbols():
    letter = []
    for i in range(59, 65):
        letter.append(chr(i))
    for i in range(92, 96):
        letter.append(chr(i))
    for i in range(124, 127):
        letter.append(chr(i))
    return letter


def make_password(letter):
    write = []
    for i in range(num):
        password = []
        for i in range(length):
            l = rm.choice(letter)
            password.append(l)
        final = "".join(password)
        write.append(final)
    return (write)


#saves output into a txt file
def write_file(write):
    open('output.txt', 'w').close()
    with open('output.txt', 'w') as file:
        for n in write:
            file.write(n + "\n")

def check_strength(filename):
    passwords = open(filename, "r")
    password = (passwords.read())
    print(password)
    passes = password.split()
    print(passes)
"""    for pas in passes:
        if pas.isupper():
        elif len(pas) > 10:
"""
            

def main():
    population = []
    for i in find:
        if i == "1":
            letter = only_lo_letters()
            for l in letter:
                population.append(l)
        elif i == "2":
            letter = only_up_letters()
            for l in letter:
                population.append(l)
        elif i == "3":
            letter = only_numbers()
            for l in letter:
                population.append(l)
        elif i == "4":
            letter = only_symbols()
            for l in letter:
                population.append(l)
    write = make_password(population)
    
    write_file(write)
    print("your passwords are done. check file named output.txt")
    check_strength("output.txt")
main()
